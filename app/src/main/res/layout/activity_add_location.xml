<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".AddLocation">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="110dp"
        android:hint="First and last name"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/et_name"
        tools:layout_marginTop="50dp"
        android:hint="phone number"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/et_phone_number"
        tools:layout_marginTop="50dp"
        android:hint="address"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/et_note"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/et_location"
        tools:layout_marginTop="50dp"
        android:hint="additional note"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/tw_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/et_note"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_marginTop="50dp"
        android:text="Delivery after 4PM"
        android:textSize="25dp"
        />

    <CheckBox
        android:id="@+id/cb_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/et_note"
        app:layout_constraintLeft_toRightOf="@+id/tw_time"
        android:checked="false"/>


    <Button
        android:id="@+id/btn_add_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="#375028"
        android:text="Submit"
        app:iconTint="#375028"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_time" />


</androidx.constraintlayout.widget.ConstraintLayout>